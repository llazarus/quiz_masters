<h1><%=@quiz.title%></h1>
<small>Created by: <%= @quiz.user.username %></small>
<p><%=@quiz.description%></p>
<p> Difficulty: <%=@quiz.difficulty%> </p>
<p>Points: <%=@quiz.points%></p>


<h2>Questions</h2>

<hr>

<form action="/quizzes/<%= @quiz.id %>/submit" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <% @quiz.questions.each do |question| %>
    <h4>Question: <%= question.description %></h4>
    <% question.answers.each do |answer| %>
      <%= answer.description %> <input type="checkbox" name="answers[<%= question.id %>]" value="<%= answer.id %>" id="<%= answer.id %>">
      <br>
    <% end %>
  <% end %>
  <button>Submit</button>
</form>
