<section id="edit-question-form">  
  <h1>Edit Question</h1>

  <%= render "formQ" %>
</section>

<section id="new-answer-form">
  <h2>New Answer</h2>
  <%= render "formA" %>
</section>

<section id="existing-answers-show">
<h2>Existing Answers</h2>

  <ul>
    <% @answers.each do |answer| %>
      <li>
        <% if answer.correct = true %>
          Correct
        <% else %>
          Wrong
        <% end %>
          <%= form_for(answer) do |form| %>

          <% if answer.errors.present? %>
              <p>
                <%= answer.errors.full_messages.join(", ") %>
              </p>
            <% end %>

            <div class="form-group">
              <%= form.label :correct %> <br>
              <%= form.radio_button(:correct, "correct", class: "form-control" )%>
            </div>

            <div class="form-group">
              <%= form.label :description %> <br>
              <%= form.text_area :description, class: "form-control" %>
            </div>



            <%= form.submit class: "btn btn-outline-primary" %>
          <% end %>

        </li>
    <% end %>
  </ul>
</section>